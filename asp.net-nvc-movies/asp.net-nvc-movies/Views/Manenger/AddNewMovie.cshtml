@model asp.net_nvc_movies.ModelView.MoviesModelView

@{
    ViewBag.Title = "AddNewMovie";
}
<h2>Add New Movie</h2>AddNewMovie
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div id="image">
    @using (Html.BeginForm("AddImage", "Admin", FormMethod.Post))
    {
        <i>img:</i> @Html.TextBoxFor(m => m.movie.Img.img) @Html.ValidationMessageFor(x => x.movie.Img.img)
        <br /><br />
        <i>title:</i> @Html.TextBoxFor(m => m.movie.Img.title) @Html.ValidationMessageFor(x => x.movie.Img.title)
        <br /><br />
        <i>alt:</i> @Html.TextBoxFor(m => m.movie.Img.alt) @Html.ValidationMessageFor(x => x.movie.Img.alt)
        <br /><br />
        <i>width:</i> @Html.TextBoxFor(m => m.movie.Img.width) @Html.ValidationMessageFor(x => x.movie.Img.width)
        <br /><br />
        <i>height:</i> @Html.TextBoxFor(m => m.movie.Img.height) @Html.ValidationMessageFor(x => x.movie.Img.height)
        <br /><br />
        <input id="B_image" type="button" value="Add img" />
    }
</div>



<div id="Movies">
    @using (Html.BeginForm("AddMovies", "Admin", FormMethod.Post))
    {
        <i>title:</i> @Html.TextBoxFor(m => m.movie.Title) @Html.ValidationMessageFor(x => x.movie.Title)
        <br /><br />
        <i>Rating:</i> @Html.TextBoxFor(m => m.movie.Rating) @Html.ValidationMessageFor(x => x.movie.Rating)
        <br /><br />
        <i>Outline:</i> @Html.TextBoxFor(m => m.movie.Outline) @Html.ValidationMessageFor(x => x.movie.Outline)
        <br /><br />
        <i>Certificate:</i> @Html.TextBoxFor(m => m.movie.Certificate) @Html.ValidationMessageFor(x => x.movie.Certificate)
        <br /><br />
        <input id="B_image" type="button" value="Add movie" />
    }
</div>

<div id="star">
    @using (Html.BeginForm("AddStars", "Admin", FormMethod.Post))
    {
        <i>Namestar:</i> @Html.TextBoxFor(m => m.stars.Namestar) @Html.ValidationMessageFor(x => x.stars.Namestar)
        <br /><br />
        <input id="B_image" type="button" class="left" value="Add star" />
    }
</div>

<div id="ganer">
    @using (Html.BeginForm("AddGaner", "Admin", FormMethod.Post))
    {
        <i>NameGaner:</i> @Html.TextBoxFor(m => m.genres.NameGaner) @Html.ValidationMessageFor(x => x.genres.NameGaner)
        <br /><br />
        <input id="B_ganer" type="button" class="left" value="Add ganer" />
    }
</div>

<div id="Director">
    @using (Html.BeginForm("AddDirector", "Admin", FormMethod.Post))
    {
        <i>NameDirector:</i> @Html.TextBoxFor(m => m.directors.NameDirector) @Html.ValidationMessageFor(x => x.directors.NameDirector)
        <br /><br />
        <input id="B_Director" type="button" class="left" value="Add Director" />
    }
</div>

